<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
        <div id="errors">
		<p><%= @recipe.errors.count %> Prevented this recipe from saving </p>
	</div>
	<% end %>
      <ul>
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      </ul>
      <% end %>
    </div>

  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>